# fix incorrect installations of XerceCxxxxxx.cmake on WIN32
if(WIN32)
    file(GLOB MACE_BUILTIN_XERCES_C_INSTALLED_CMAKE_FILES "${CMAKE_INSTALL_PREFIX}/cmake/XercesC*.cmake")
    foreach(XERCES_C_INSTALLED_CMAKE_FILE IN LISTS MACE_BUILTIN_XERCES_C_INSTALLED_CMAKE_FILES)
        file(REMOVE "${XERCES_C_INSTALLED_CMAKE_FILE}")
    endforeach()
    file(GLOB MACE_INSTALL_CMAKE_DIR_FILES "${CMAKE_INSTALL_PREFIX}/cmake/*")
    if("${MACE_INSTALL_CMAKE_DIR_FILES}" STREQUAL "")
        file(REMOVE_RECURSE "${CMAKE_INSTALL_PREFIX}/cmake")
    endif()
endif()
