#############################################################################
# Initialization settings
#############################################################################

/control/verbose 0
/run/verbose 0

#/MACE/Detector/Description/Ixport mace_geom.yaml

/run/initialize

/gps/particle                                  e+
/gps/direction                                 0 0 1
/gps/pos/type                                  Beam
/gps/pos/shape                                 Circle
/gps/pos/centre                                0 0 -1.5 m
/gps/pos/radius                                0 mm
/gps/pos/sigma_r                               5 mm
/gps/ene/type                                  Gauss
/gps/ene/mono                                  27.49 MeV
/gps/ene/sigma                                 0.7 MeV
/MACE/Generator/GPS/PulseWidth                 0 ns
/MACE/Generator/GPS/PrimariesForEachG4Event    1

