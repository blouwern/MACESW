#############################################################################
# Initialization settings
#############################################################################

/control/verbose 0
/run/verbose 0

#/Mustard/Detector/Description/Ixport SimMACE_geom.yaml

/run/initialize

/gps/particle             gamma
/gps/pos/type             Volume
/gps/pos/shape            Para
/gps/pos/centre           2 0 0 m
/gps/pos/halfx            1 m
/gps/pos/halfy            1 m
/gps/pos/halfz            1 m
/gps/ang/type             iso
/gps/ene/type             Lin
/gps/ene/gradient         0
/gps/ene/intercept        1
/gps/ene/min              1 keV
/gps/ene/max              6 MeV
/GPSX/NVertex             1000
/GPSX/PulseWidth          0 ns

/MACE/Analysis/SavePrimaryVertexData  no
/MACE/Analysis/SaveDecayVertexData    yes
/MACE/Analysis/CoincidenceWithMMS     no
/MACE/Analysis/CoincidenceWithMCP     no
/MACE/Analysis/CoincidenceWithECal    no
/MACE/Analysis/SaveTTCHitData         yes
/MACE/Analysis/SaveCDCHitData         yes

#############################################################################
# Run
#############################################################################

/Mustard/Analysis/FilePath SimMACE_env_gamma
/Mustard/Analysis/FileMode NEW
/run/beamOn 80
/Mustard/Run/PrintRunSummary
